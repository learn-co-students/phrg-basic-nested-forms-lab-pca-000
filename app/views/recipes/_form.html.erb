<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.fields_for :ingredients do |i| %>
    <%= i.label :quantity %>
    <%= i.text_field :quantity %>
    <br>
    <%= i.label :name %>
    <%= i.text_field :name %>
    <br>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>
